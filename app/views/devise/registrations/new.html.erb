<div class="bg-white">
  <div class="container p-3">
    <div class="row justify-content-center">
      <div class= "border rounded col-12 col-sm-10 col-md-8 col-lg-5">
        <div ><h2 class="text-center mb-3">Créer ton compte</h2></div>

        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">
            <div class="row mb-2">
              <div class="col-6">
                <%= f.label "Prénom" %>
                <%= f.input :firstname,
                            label: false,
                            required: true,
                            autofocus: true,
                            input_html: { autocomplete: "given-name", class:"form-control" }%>
              </div>
              <div class="col-6">
                <%= f.label "Nom" %>
                <%= f.input :lastname,
                            label: false,
                            required: true,
                            autofocus: true,
                            input_html: { autocomplete: "family-name", class:"form-control" }%>
              </div>
            </div>
            <div class="row mb-3">
              <div class="col-4"><%= f.label "Email" %></div>
              <div class="col-8">
                <%= f.input :email,
                            label: false,
                            required: true,
                            autofocus: true,
                            input_html: { autocomplete: "email", class:"form-control" }%>
              </div>
            </div>
            <div class="row mb-3">
              <div class="col-4"><%= f.label "Mot de passe" %></div>
              <div class="col-8">
                <%= f.input :password,
                            label: false,
                            required: true,
                            hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                            input_html: { autocomplete: "new-password", class:"form-control" } %>
              </div>
            </div>
            <div class="row mb-3">
              <div class="col-4"><%= f.label "Confirmation du mot de passe" %></div>
              <div class="col-8">
                <%= f.input :password_confirmation,
                            label: false,
                            required: true,
                            input_html: { autocomplete: "new-password", class:"form-control" } %>
              </div>
            </div>
            <div class="row mb-3">
              <div class="col-4"><%= f.label "Téléphone" %></div>
              <div class="col-8">
                <%= f.input :phone_number,
                            label: false,
                            required: true,
                            autofocus: true,
                            input_html: { autocomplete: "tel_national", class:"form-control" }%>
              </div>
            </div>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Sign up", class:"btn btn-clr col-4"%>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>

      </div>
    </div>


  </div>
</div>
