<div class="bg-white">
  <div class="container p-3">
    <div class="row justify-content-center">
      <div class="border rounded col-12 col-sm-10 col-md-8 col-lg-5">
        <h2 class="text-center mb-3">Se connecter</h2>

        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <div class="row mb-2">
              <div class="col-4"><%= f.label "Email" %></div>
              <div  class="col-8">
                <%= f.input :email,
                            label: false,
                            required: false,
                            autofocus: true,
                            input_html: { autocomplete: "email", class:"form-control"} %>
              </div>
            </div>
            <div class="row mb-2">
              <div class="col-4"><%= f.label "Mot de Passe" %></div>
              <div class="col-8">
                <%= f.input :password,
                            label: false,
                            required: false,
                            input_html: { autocomplete: "current-password", class:"form-control" } %>
              </div>
            </div>
            <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Log in",class: "btn btn-clr" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
