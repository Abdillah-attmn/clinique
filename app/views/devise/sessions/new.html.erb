<div class="bg-white">
  <div class="container p-3">
    <div class="row justify-content-center">
      <div class="border rounded col-12 col-sm-10 col-md-8 col-lg-5">

        <div><h2 class="text-center mb-3">Se connecter</h2></div>

        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-inputs">
            <div class="row mb-3">
              <div class="col-4"><%= f.label "Email" %></div>
              <div class="col-8">
                <%= f.input :email,
                            label: false,
                            required: true,
                            autofocus: true,
                            input_html: { class:"form-control", autocomplete: "email" }%>
              </div>
            </div>
            <div class="row mb-3">
              <div class="col-4"><%= f.label 'Mot de passe' %></div>
              <div class="col-8">
                <%= f.input :password,
                            label: false,
                            required: true,
                            input_html: {  class: "form-control w-100", autocomplete: "password" } %>
              </div>
            </div>
            <%= f.input :remember_me, label: "Se souvenir de moi", as: :boolean if devise_mapping.rememberable? %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Se Connecter", class:"btn btn-clr" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
